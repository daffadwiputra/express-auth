extends layout

block content
    h1= article.title
    h5 Written by #{author}
    p= article.body
    hr
    if user
        if user.id == article.author
            a.btn.btn-warning.float-md-left(href="/articles/edit/"+article._id) Edit
            form(action="/articles/"+article._id+"?_method=DELETE", method="post")
                button.btn.btn-danger.float-md-right(type="submit") Hapus

