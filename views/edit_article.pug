extends layout

block content
    h1 #{title}
    form(action="/articles/edit/"+article._id, method="post")
        #form-group
            label Title:
            input.form-control(type="text", name="title" value=article.title)
        #form-group
            label Body:
            textarea.form-control(name="body")= article.body
        br
        input.btn.btn-primary(type="submit" value="Submit")